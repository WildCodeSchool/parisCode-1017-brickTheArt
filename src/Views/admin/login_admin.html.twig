
{% block body %}

    <h2 class="section_title">IDENTIFICATION ESPACE ADMINISTRATEUR</h2>

        <form method="POST" action="index.php?page=login">
            <div class="control-group <?php echo!empty($loginError) ? 'error' : ''; ?>">
                <label class="control-label">Login</label>
                <div class="controls">
                    <input type="text" name="login" value="{{ user.login }}">
                    {% if errors.login is defined %} {{ errors.login }} {% endif %}
                    <span class="help-inline"><?php echo $loginError; ?></span>
                    <?php endif; ?>
                </div>
            </div>
            <div class="control-group<?php echo!empty($passwordError) ? 'error' : ''; ?>">
                <label class="control-label">Password</label>
                <div class="controls">
                    <input type="password" name="password" value="{{ user.password }}">
                    {% if errors.password is defined %} {{ errors.password }} {% endif %}
                    <span class="help-inline"><?php echo $passwordError; ?></span>
                    <?php endif; ?>
                </div>
            </div>
            <input type="submit" value="submit" name="submit">
        </form>

{% endblock %}