{% extends 'layout_admin.html.twig' %}

{% block body %}

<h2>Ajouter une nouvelle Masterpiece</h2>

    <form method="post" action="index.php?page=add_masterpiece">

<div class="form-group">
    <div class="row">
        <div class = "col-md-12">
            <label for="content">Titre de l'image</label>
            <textarea name="content" class="form-control" id="content"></textarea>
        </div>

        <div class = "col-md-12">
            <label for="file">Image</label>

            <form enctype="multipart/form-data" action="upload.php" method="post">

                <input type="hidden" name="MAX_FILE_SIZE" value="1" />
                <input name="userfile[]" type="file"/>

            </form>

        </div>

        <div class = "col-md-12">
            <label for="content">Description</label>
            <textarea name="content" rows="8" cols="80" class="form-control" id="content"></textarea>
        </div>

    </div>

    <div class="row">
        <div class = "col-md-2">
            <button type="submit" class="btn btn-primary" role="button">Enregistrer</button>
        </div>
    </div>

</div>
    </form>

{% endblock %}