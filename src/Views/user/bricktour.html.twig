{% extends 'layout.html.twig' %}

{% block body %}

    <h2 class="section_title">The Brick Tour !</h2>
    <h3 align="center">Nous envahissons le monde entier avec nos constructions de briques. BÃ¢tissez un monde Lego avec nous !</h3><br />

        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <div id="map"></div>
            </div>
        </div>

          <script>

              function initMap() {
                  var myLatLng = {lat: 48.896391, lng: 2.160098 };

                  // Create a map object and specify the DOM element for display.
                  var map = new google.maps.Map(document.getElementById('map'), {
                      center: myLatLng,
                      zoom: 4
                  });



                  {% for marker in markers %}


                  var contentString = '<div id="content">' +
                      '<div id="">'+'</div>' +
                      '<h1 id="firstHeading" class="firstHeading">{{ marker.event}}</h1>' +
                      '<div id="bodyContent">'+
                      '<p>{{ marker.description }}</p>' +
                      '</div>' +
                      '</div>';

                  // Create a marker and set its position.
                  var marker = new google.maps.Marker({
                      map: map,
                      position: {lat : {{marker.latitude}}, lng : {{ marker.longitude }} }
                  });


                  var infoWindow = new google.maps.InfoWindow();
                  //Attach click event to the marker.
                  (function (marker, contentString) {
                      google.maps.event.addListener(marker, "click", function (e) {
                          //Wrap the content inside an HTML DIV in order to set height and width of InfoWindow.
                          infoWindow.setContent(contentString);
                          infoWindow.open(map, marker);
                      });

                      google.maps.event.addListener(map, 'click', function() {
                          infoWindow.close();
                      });
                  })(marker, contentString);




                  {% endfor %}
              }


          </script>





          <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCo_tmTDc_BmShRllhDFKqyl7zrGNjLNI0&callback=initMap">
          </script>


    
{% endblock %}