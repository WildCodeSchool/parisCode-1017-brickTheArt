{% extends 'layout.html.twig' %}

{% block body %}

    <!-- CONTAINER -->
    <div class="container">


        <section class="concept_about">

            <h2 class="section_title">The Concept behind BrickTheArt</h2>

            <p>{{ information.concept }}</p>

        </section>



        <section class="concept_news">

            <h2 class="section_title">Articles</h2>

             {% for master in masterpiece %}

                <div class="concept_article">


                    <div class="concept col-md-6 col-xs-12">

                        <h3 class="article_title">{{ master.title }}</h3>

                        <figure>
                            <img class="concept_img" src="{{ master.image }}" alt="#"/>
                        </figure>

                        <p>{{ master.content }}</p>

                        </div>
                </div>

    {% endfor %}
        </section>

    </div>
{% endblock %}