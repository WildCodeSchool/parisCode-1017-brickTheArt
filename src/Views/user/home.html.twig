        {% extends 'layout.html.twig' %}

        {% block head %}

            <title>Accueil-Brick The Art</title>

        {% endblock %}


        {% block body %}

            {# INTRODUCTION Titre + Texte #}

            <div class="container">

            <section class="home_introduction">

                <h2 class="section_title">Informations</h2>

                <p>{{ information.home }}</p>

            </section>
                

            {# LES DERNIERES EXPOSITIONS Titre + Image + Titres images #}

                <section class="home_highlights">

                    <h2 class="section_title">Nos derniers passages</h2>
                    <div class="home_headline">
